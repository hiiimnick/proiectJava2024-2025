<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="clase.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="user" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="pass" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Login" fx:id="login" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Register" fx:id="register" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Switch" fx:id="schimbare" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label fx:id="label" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>